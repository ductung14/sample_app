<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <li><%= link_to t("header.link_sample"), home_path, id: "logo" %></li>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only"><%= t("header.toggle") %></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to t("header.link_home"), home_path %></li>
        <li><%= link_to t("header.link_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("header.link_user"), "#" %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= t("header.link_account") %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu" aria-labelledby="account">
              <li><%= link_to t("header.link_profile"), current_user %></li>
              <li><%= link_to t("header.link_setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header.link_logout"), logout_path, data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.link_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
